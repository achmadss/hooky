// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider   = "prisma-client-js"
  engineType = "client"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String    @id @default(uuid())
  email         String    @unique
  passwordHash  String?   // Nullable to support OAuth-only accounts
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  deletedAt     DateTime? // Soft-delete field

  webhooks      Webhook[]

  @@map("users")
}

model Webhook {
  id            String    @id @default(uuid())
  token         String    @unique
  name          String?
  isEnabled     Boolean   @default(true)
  ownerId       String?   // null for anonymous webhooks
  sessionId     String?   // anonymous session identifier
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  deletedAt     DateTime? // Soft-delete field

  owner         User?     @relation(fields: [ownerId], references: [id])
  requests      Request[]
  responseConfig ResponseConfig?

  @@map("webhooks")
}

model Request {
  id            String    @id @default(uuid())
  webhookId     String
  webhookToken  String    // Token at time of capture (for display purposes)
  method        String
  headers       Json
  queryParams   Json
  body          String?
  timestamp     DateTime  @default(now())
  sourceIp      String
  userAgent     String?
  deletedAt     DateTime? // Soft-delete field

  webhook       Webhook   @relation(fields: [webhookId], references: [id])

  @@map("requests")
}

model ResponseConfig {
  id            String    @id @default(uuid())
  webhookId     String    @unique
  statusCode    Int       @default(200)
  headers       Json      @default("{}")
  body          String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  deletedAt     DateTime? // Soft-delete field

  webhook       Webhook   @relation(fields: [webhookId], references: [id])

  @@map("response_configs")
}
