{
  "name": "hooky",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "bun server.ts",
    "build": "next build",
    "start": "NODE_ENV=production bun server.ts",
    "lint": "eslint",
    "test": "vitest",
    "test:run": "vitest run",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "docker:build": "docker build --platform linux/amd64 -t novan921/hooky:latest -t novan921/hooky:$(node -p \"require('./package.json').version\") .",
    "docker:push": "docker push novan921/hooky:latest && docker push novan921/hooky:$(node -p \"require('./package.json').version\")",
    "docker:build-push": "bun run docker:build && bun run docker:push"
  },
  "dependencies": {
    "@monaco-editor/react": "^4.7.0",
    "@types/node-cron": "^3.0.11",
    "bcryptjs": "^3.0.3",
    "clsx": "^2.1.1",
    "drizzle-kit": "^0.31.9",
    "drizzle-orm": "^0.45.1",
    "lucide-react": "^0.563.0",
    "next": "16.1.6",
    "next-auth": "^4.24.13",
    "next-themes": "^0.4.6",
    "node-cron": "^4.2.1",
    "pg": "^8.18.0",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "socket.io": "^4.8.3",
    "socket.io-client": "^4.8.3",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^5.1.4",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "jsdom": "^28.0.0",
    "tailwindcss": "^4",
    "typescript": "^5",
    "vitest": "^4.0.18"
  },
  "ignoreScripts": [
    "sharp",
    "unrs-resolver"
  ],
  "trustedDependencies": [
    "sharp",
    "unrs-resolver"
  ]
}
