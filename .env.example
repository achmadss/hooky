# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/hooky

# Server
PORT=3000

# Next.js App URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Authentication (NextAuth.js)
NEXTAUTH_SECRET=your-secret-key-here-change-in-production
NEXTAUTH_URL=http://localhost:3000

# Anonymous webhook retention
ANONYMOUS_RETENTION_DAYS=7
ANONYMOUS_SESSION_EXPIRY_DAYS=6

# Request limits
MAX_REQUEST_BODY_SIZE_MB=50

# Cleanup schedule (cron expression)
CLEANUP_SCHEDULE=0 0 * * *
