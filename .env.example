# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/hooky

# Next.js App URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Authentication (NextAuth.js)
NEXTAUTH_SECRET=your-secret-key-here-change-in-production
NEXTAUTH_URL=http://localhost:3000

# Optional: Anonymous webhook retention period in days (default: 7)
ANONYMOUS_RETENTION_DAYS=7

# Optional: Anonymous session expiry in days (default: 6)
ANONYMOUS_SESSION_EXPIRY_DAYS=6

# Optional: Maximum request body size in MB (default: 50)
MAX_REQUEST_BODY_SIZE_MB=50

# Optional: Cleanup schedule as cron expression (default: daily at midnight UTC)
CLEANUP_SCHEDULE=0 0 * * *
